@model User

<form style="width: 300px; padding: 15px; margin: 0 auto; margin-top: 10%" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Зарегистрируйтесь</h1>
    </div>
    <div class="form-label-group mb-2">
        <input type="email" asp-for="Email" id="inputEmail" class="form-control" placeholder="Введите Email" required="" autofocus="">
        <span asp-validation-for="Email" />
    </div>
    <div class="form-label-group mb-2">
        <input type="text" asp-for="Name" id="inputName" class="form-control" placeholder="Введите ваше имя" required="" autofocus="">
        <span asp-validation-for="Name" />
    </div>
    <div class="form-label-group mb-2">
        <input type="text" asp-for="PhoneNumber" id="inputPhone" class="form-control" placeholder="Введите номер телефона" required="" autofocus="">
        <span asp-validation-for="PhoneNumber" />
    </div>

    <div class="form-label-group mb-4">
        <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Введите пароль" required="">
        <span asp-validation-for="Password" />
    </div>

    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Зарегистрироваться"/>
    <a class="mt-5 mb-2 text-muted text-center" asp-action="Login" asp-controller="Account">Вход</a>
</form>



