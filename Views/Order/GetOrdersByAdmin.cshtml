@model IEnumerable<Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-heading"><h3>Просмотр заказов всех пользователей</h3></div>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th class="text-center">Email</th>
        <th class="text-center">Имя</th>
        <th class="text-center">Телефон</th>
        <th class="text-center">Время заказа</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@item.Email</td>
            <td class="text-center">@item.Name</td>
            <td class="text-center">@item.Phone</td>
            <td class="text-center">@item.OrderTime</td>
            <td class="text-center">
                <a asp-controller="Order" class="btn btn-link" asp-action="GetOrderDetails" asp-route-orderId=@item.Id>Посмотреть детали</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Index">Назад</a>
