@model IList<Review>
@{
    ViewData["Title"] = "Fishing Line";
    Layout = "_Layout";
}
@if (@Model.Last().Sentiment.Substring(0, 8) == "Positive")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Thank you for your review, it is extremely vital for us");
        };
    </script>
}@if (@Model.Last().Sentiment.Substring(0, 8) == "Negative")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("We will do our best to make you proud");
        };
    </script>
}
