<table class="table drawForm" >

    @*@foreach (Post post in Model.Posts)*@
    @foreach (var post in Model)
    {
        <tr>
            <td style="padding: 0 15px 0 15px;">
                @Html.DisplayFor(item => post.Text)
            </td>
            @if (post.Sentiment == null)
            {
                continue;
            }
            @if (post.Sentiment.Substring(0,8) == "Positive" )
            {


            <td style="padding: 0 15px 0 15px; color:forestgreen;">
                @Html.DisplayFor(item => post.Sentiment)
            </td>
            }
            @if (post.Sentiment.Substring(0,8) == "Negative")
            {


            <td style="padding: 0 15px 0 15px; color: crimson;">
                @Html.DisplayFor(item => post.Sentiment)
            </td>
            }
        </tr>
    }
</table>

